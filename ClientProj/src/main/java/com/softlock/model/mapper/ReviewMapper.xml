<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.softlock.model.ReviewImpl">
	 <insert id ="reviewinsert" parameterType="String">
		INSERT INTO REVIEW values
		(seq_review.nextval , #{param1}, #{param2}, #{param3}, #{param4}, sysdate)
	</insert>
	<!-- 병원상세정보 페이지에서 볼 후기쿼리 -->
	<select id="reviewView" resultType="com.softlock.model.ReviewDTO">
		select * from REVIEW where rvw_hp_idx=#{param1}
	</select>
</mapper> 